<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/background_object"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121">

        <TextView
            android:id="@+id/tv_count_year"
            android:layout_width="@dimen/small_heart_width"
            android:layout_height="@dimen/small_heart_height"
            android:background="@drawable/year"
            android:textSize="18sp"
            android:fontFamily="@font/love_4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_count_month"
            android:layout_width="@dimen/small_heart_width"
            android:layout_height="@dimen/small_heart_height"
            android:textSize="18sp"
            android:background="@drawable/month"
            android:fontFamily="@font/love_4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_count_day"
            android:layout_width="@dimen/small_heart_width"
            android:layout_height="@dimen/small_heart_height"
            android:textSize="18sp"
            android:background="@drawable/day"
            android:fontFamily="@font/love_4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_count_hour"
            android:layout_width="@dimen/small_heart_width"
            android:layout_height="@dimen/small_heart_height"
            android:textSize="18sp"
            android:background="@drawable/hour"
            android:fontFamily="@font/love_4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_count_minute"
            android:layout_width="@dimen/small_heart_width"
            android:layout_height="@dimen/small_heart_height"
            android:textSize="18sp"
            android:background="@drawable/minute"
            android:fontFamily="@font/love_4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_count_second"
            android:layout_width="@dimen/small_heart_width"
            android:layout_height="@dimen/small_heart_height"
            android:textSize="18sp"
            android:background="@drawable/second"
            android:fontFamily="@font/love_4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1/1/2000"
        android:textColor="@color/white"
        android:fontFamily="@font/love_5"
        android:background="@color/background_object"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_dear"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/love_3"
        android:text="Dear,"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_date" />

    <TextView
        android:id="@+id/tv_name_quote"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/love_3"
        android:text="name demo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dear" />

    <TextView
        android:id="@+id/tv_quote"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/love_3"
        android:text="quote demo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_quote" />



</androidx.constraintlayout.widget.ConstraintLayout>